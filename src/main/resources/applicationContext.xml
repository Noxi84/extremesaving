<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN" "http://www.springframework.org/dtd/spring-beans.dtd">

<beans>
    <!--Main-->
    <bean id="main" class="extremesaving.Main">
        <property name="pdfService" ref="pdfService"/>
        <property name="chartService" ref="chartService"/>
    </bean>

    <!--Facade-->
    <bean id="totalsFacade" class="extremesaving.facade.TotalsFacadeImpl">
        <property name="calculationService" ref="calculationService"/>
    </bean>

    <!--Service-->
    <bean id="calculationService" class="extremesaving.service.CalculationServiceImpl">
    </bean>
    <bean id="chartDataService" class="extremesaving.service.ChartDataServiceImpl">
        <property name="dataDao" ref="dataDao"/>
        <property name="calculationService" ref="calculationService"/>
        <property name="accountService" ref="accountService"/>
    </bean>

    <bean id="accountService" class="extremesaving.service.AccountServiceImpl">
        <property name="dataDao" ref="dataDao"/>
        <property name="calculationService" ref="calculationService"/>
    </bean>
    <bean id="chartService" class="extremesaving.service.chart.ChartServiceImpl">
        <property name="accountPieChartGenerator" ref="accountPieChartGenerator"/>
        <property name="monthlyBarChartGenerator" ref="monthlyBarChartGenerator"/>
        <property name="yearlyBarChartGenerator" ref="yearlyBarChartGenerator"/>
        <property name="overallLineChartGenerator" ref="overallLineChartGenerator"/>
        <property name="monthlyMeterChartGenerator" ref="monthlyMeterChartGenerator"/>
    </bean>

    <!--Dao-->
    <bean id="dataDao" class="extremesaving.dao.DataDaoImpl"/>

    <!--Pdf-->
    <bean id="pdfPageSummaryGenerator" class="extremesaving.service.pdf.PdfPageSummaryGenerator">
        <property name="accountService" ref="accountService"/>
    </bean>
    <bean id="pdfPageMonthYearGenerator" class="extremesaving.service.pdf.PdfPageMonthYearGenerator">
    </bean>
    <bean id="pdfPageGridGenerator" class="extremesaving.service.pdf.PdfPageGridGenerator">
    </bean>
    <bean id="pdfPagePredictionsGenerator" class="extremesaving.service.pdf.PdfPagePredictionsGenerator">
    </bean>
    <bean id="pdfService" class="extremesaving.service.pdf.DefaultPdfService">
        <property name="pdfPageSummaryGenerator" ref="pdfPageSummaryGenerator"/>
        <property name="pdfPageMonthYearGenerator" ref="pdfPageMonthYearGenerator"/>
        <property name="pdfPageGridGenerator" ref="pdfPageGridGenerator"/>
        <property name="pdfPagePredictionsGenerator" ref="pdfPagePredictionsGenerator"/>
    </bean>

    <!--Chart-->
    <bean id="accountPieChartGenerator" class="extremesaving.service.chart.AccountPieChartGenerator">
        <property name="chartDataService" ref="chartDataService"/>
    </bean>
    <bean id="monthlyBarChartGenerator" class="extremesaving.service.chart.MonthlyBarChartGenerator">
        <property name="chartDataService" ref="chartDataService"/>
    </bean>
    <bean id="yearlyBarChartGenerator" class="extremesaving.service.chart.YearlyBarChartGenerator">
        <property name="chartDataService" ref="chartDataService"/>
    </bean>
    <bean id="overallLineChartGenerator" class="extremesaving.service.chart.OverallLineChartGenerator"/>
    <bean id="monthlyMeterChartGenerator" class="extremesaving.service.chart.MonthlyMeterChartGenerator"/>

</beans>