<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN" "http://www.springframework.org/dtd/spring-beans.dtd">

<beans>

    <bean id="calculationFacade" class="extremesaving.calculation.facade.CalculationFacadeImpl">
        <property name="calculationService" ref="calculationService"/>
    </bean>

    <bean id="calculationService" class="extremesaving.calculation.service.CalculationServiceImpl">
    </bean>

    <bean id="accountFacade" class="extremesaving.calculation.facade.AccountFacadeImpl">
        <property name="dataFacade" ref="dataFacade"/>
        <property name="calculationFacade" ref="calculationFacade"/>
    </bean>
    <bean id="categoryFacade" class="extremesaving.calculation.facade.CategoryFacadeImpl">
        <property name="calculationFacade" ref="calculationFacade"/>
    </bean>
    <bean id="predictionService" class="extremesaving.calculation.service.PredictionServiceImpl">
        <property name="dataFacade" ref="dataFacade"/>
        <property name="calculationFacade" ref="calculationFacade"/>
    </bean>

</beans>