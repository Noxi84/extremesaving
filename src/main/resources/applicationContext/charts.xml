<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN" "http://www.springframework.org/dtd/spring-beans.dtd">

<beans>
    <bean id="chartDataService" class="extremesaving.charts.service.ChartDataServiceImpl">
        <property name="dataFacade" ref="dataFacade"/>
        <property name="calculationFacade" ref="calculationFacade"/>
    </bean>
    <bean id="chartFacade" class="extremesaving.charts.facade.ChartFacadeImpl">
        <property name="monthlyBarChartService" ref="monthlyBarChartService"/>
        <property name="yearlyBarChartService" ref="yearlyBarChartService"/>
        <property name="yearLineChartService" ref="yearLineChartService"/>
        <property name="goalLineChartService" ref="goalLineChartService"/>
    </bean>

    <bean id="monthlyBarChartService" class="extremesaving.charts.service.MonthlyBarChartService">
        <property name="chartDataService" ref="chartDataService"/>
    </bean>
    <bean id="yearlyBarChartService" class="extremesaving.charts.service.YearlyBarChartService">
        <property name="chartDataService" ref="chartDataService"/>
    </bean>
    <bean id="goalLineChartService" class="extremesaving.charts.service.GoalLineChartService">
        <property name="chartDataService" ref="chartDataService"/>
    </bean>
    <bean id="yearLineChartService" class="extremesaving.charts.service.YearLineChartService">
        <property name="chartDataService" ref="chartDataService"/>
    </bean>


</beans>