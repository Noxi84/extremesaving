<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN" "http://www.springframework.org/dtd/spring-beans.dtd">

<beans>
    <!-- Facade-->
    <bean id="pdfFacade" class="extremesaving.pdf.facade.PdfFacadeImpl">
        <property name="pdfPageCategoryGridCreator" ref="pdfPageCategoryGridCreator"/>
        <property name="pdfPageItemGridCreator" ref="pdfPageItemGridCreator"/>
        <property name="pdfPageTipOfTheDayCreator" ref="pdfPageTipOfTheDayCreator"/>
    </bean>

    <!-- Pdf page creators -->
    <bean id="pdfPageCategoryGridCreator" class="extremesaving.pdf.service.PdfPageCategoryGridCreator">
        <property name="dataFacade" ref="dataFacade"/>
        <property name="categoryFacade" ref="categoryFacade"/>
    </bean>
    <bean id="pdfPageItemGridCreator" class="extremesaving.pdf.service.PdfPageItemGridCreator">
        <property name="dataFacade" ref="dataFacade"/>
        <property name="calculationFacade" ref="calculationFacade"/>
    </bean>
    <bean id="pdfPageTipOfTheDayCreator" class="extremesaving.pdf.service.PdfPageTipOfTheDayCreator">
        <property name="dataFacade" ref="dataFacade"/>
        <property name="calculationFacade" ref="calculationFacade"/>
        <property name="estimationFacade" ref="estimationFacade"/>
        <property name="accountFacade" ref="accountFacade"/>
    </bean>

</beans>