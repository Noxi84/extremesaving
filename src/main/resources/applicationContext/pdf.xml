<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN" "http://www.springframework.org/dtd/spring-beans.dtd">

<beans>
    <!--Facade-->
    <bean id="pdfFacade" class="extremesaving.pdf.facade.PdfFacadeImpl">
        <property name="tipOfTheDayPageService" ref="tipOfTheDayPageService"/>
        <property name="overallItemsPageService" ref="overallItemsPageService"/>
        <property name="yearItemsPageService" ref="yearItemsPageService"/>
        <property name="monthItemsPageService" ref="monthItemsPageService"/>
    </bean>

    <!--Services-->
    <bean id="tipOfTheDayPageService" class="extremesaving.pdf.service.TipOfTheDayPageServiceImpl">
        <property name="dataFacade" ref="dataFacade"/>
        <property name="calculationFacade" ref="calculationFacade"/>
        <property name="estimationFacade" ref="estimationFacade"/>
    </bean>
    <bean id="overallItemsPageService" class="extremesaving.pdf.service.OverallItemsPageServiceImpl">
        <property name="dataFacade" ref="dataFacade"/>
        <property name="categoryFacade" ref="categoryFacade"/>
        <property name="calculationFacade" ref="calculationFacade"/>
        <property name="chartFacade" ref="chartFacade"/>
        <property name="accountFacade" ref="accountFacade"/>
    </bean>
    <bean id="yearItemsPageService" class="extremesaving.pdf.service.YearItemsPageServiceImpl">
        <property name="dataFacade" ref="dataFacade"/>
        <property name="categoryFacade" ref="categoryFacade"/>
        <property name="calculationFacade" ref="calculationFacade"/>
        <property name="chartFacade" ref="chartFacade"/>
    </bean>
    <bean id="monthItemsPageService" class="extremesaving.pdf.service.MonthItemsPageServiceImpl">
        <property name="dataFacade" ref="dataFacade"/>
        <property name="categoryFacade" ref="categoryFacade"/>
        <property name="calculationFacade" ref="calculationFacade"/>
        <property name="chartFacade" ref="chartFacade"/>
    </bean>

</beans>