<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN" "http://www.springframework.org/dtd/spring-beans.dtd">

<beans>
    <bean id="pdfPageCategoryGridService" class="extremesaving.pdf.service.PdfPageCategoryGridService">
        <property name="dataFacade" ref="dataFacade"/>
        <property name="categoryFacade" ref="categoryFacade"/>
    </bean>
    <bean id="pdfPageItemGridService" class="extremesaving.pdf.service.PdfPageItemGridService">
        <property name="dataFacade" ref="dataFacade"/>
    </bean>
    <bean id="pdfPagePredictionsService" class="extremesaving.pdf.service.PdfPageTipOfTheDayService">
        <property name="dataFacade" ref="dataFacade"/>
        <property name="calculationService" ref="calculationService"/>
        <property name="predictionService" ref="predictionService"/>
        <property name="accountFacade" ref="accountFacade"/>
    </bean>
    <bean id="pdfFacade" class="extremesaving.pdf.facade.PdfFacadeImpl">
        <property name="pdfPageCategoryGridService" ref="pdfPageCategoryGridService"/>
        <property name="pdfPageItemGridService" ref="pdfPageItemGridService"/>
        <property name="pdfPagePredictionsService" ref="pdfPagePredictionsService"/>
    </bean>

</beans>